generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RequestLabel {
  COMPANIONSHIP
  SHOPPING
  TRANSPORTATION
  HOME_TASKS
  OTHER
}

enum RequestUrgency {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  OPEN
  ONGOING
  CLOSED
}

model User {
  id          String   @id @default(uuid()) @db.Uuid
  username    String?  @db.VarChar(255)
  phoneNumber String?  @db.VarChar(255)
  homeAddress String?  @db.Text
  pwd         Boolean?
  volunteer   Boolean?
  viaHours    Int? // approximate INTERVAL as Int (minutes)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // requests removed to simplify migrations
}

model Request {
  id             String   @id @default(uuid())
  userId         String   // hardcoded, no relation needed
  username       String?  @db.VarChar(255)
  title          String?  @db.Text
  type           String?  @db.Text
  description    String?  @db.Text
  location       String?  @db.Text
  initialMeet    Boolean?
  time           String?  @db.VarChar(255)
  approxDuration String?  @db.VarChar(255)
  priority       String?  @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
