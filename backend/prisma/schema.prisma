generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  role      Role      @default(PWD)
  requests  Request[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Request {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  status      Status    @default(OPEN)
  createdBy   Int
  user        User      @relation(fields: [createdBy], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Role {
  PWD
  VOLUNTEER
}

enum Status {
  OPEN
  ACCEPTED
  COMPLETED
}
